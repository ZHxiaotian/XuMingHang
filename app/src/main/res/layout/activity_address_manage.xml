<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dq="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="zy.xuminghang.activity.AddressManageActivity">

    <include layout="@layout/layout_title"></include>
   <LinearLayout
       android:layout_marginTop="10dip"
       android:layout_marginLeft="10dip"
       android:layout_width="match_parent"
       android:gravity="center_vertical"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="客户编码"
           />
        <EditText
            android:id="@+id/coustomcode"
            style="@style/content_item_edittext"
             />
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:text="搜索"
           />
   </LinearLayout>
  <ListView
      android:layout_marginTop="15dip"
      android:id="@+id/lv_addressmanager"
      android:layout_width="match_parent"
      android:layout_weight="1"
      android:dividerHeight="10dp"
      android:layout_height="0dip">


  </ListView>

<Button
    android:layout_gravity="center"
    android:id="@+id/bt_newadd"
    android:text="新建地址"
    android:background="#ff0000"
    android:layout_width="200dip"
    android:layout_marginBottom="20dip"
    android:layout_height="wrap_content" />







</LinearLayout>
