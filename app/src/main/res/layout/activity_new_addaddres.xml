<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="zy.xuminghang.activity.NewAddaddresActivity">

   <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView

                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="用户编号:" />

            <EditText

                android:id="@+id/tv_userno"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_backgroud"
                />

            <CheckBox
                android:id="@+id/ck_newaddaddress"
                  android:text="设为默认地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
             android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="收货人电话" />

            <EditText
                android:id="@+id/tv_userphoneno"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_backgroud"
                />

            <TextView

                android:layout_width="100dip"
                android:layout_height="wrap_content"

                android:text="收货人姓名" />

            <EditText
                 android:id="@+id/et_receiptmanname"
                android:layout_width="200dip"
                android:background="@drawable/edittext_backgroud"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="所在地区"
                android:layout_width="100dip"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_areais"
                android:layout_width="400dip"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_addressselect"
                android:text="请选择>>"
                android:layout_width="100dip"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="详细地址"
                android:layout_width="100dip"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="500dip"
                android:background="@drawable/edittext_backgroud"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/qianhui" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dip"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical"
      >
      <Button
          android:id="@+id/bt_saveaddress"
          android:background="@color/zxing_viewfinder_laser"
          android:layout_width="200dip"
          android:layout_height="60dip"
          android:text="保存"
          />
      
  </LinearLayout>

</LinearLayout>
