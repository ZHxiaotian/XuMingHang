<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="zy.xuminghang.activity.NewAddaddresActivity">

    <include layout="@layout/layout_title"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView

                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="用户编号:" />

            <EditText
                android:background="@drawable/edittext_backgroud"
                android:id="@+id/tv_updete_userno"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                />

            <CheckBox

                android:id="@+id/ck_update_newaddaddress"
                android:text="设为默认地址"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
           android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="收货人电话" />

            <EditText
                android:background="@drawable/edittext_backgroud"
                android:id="@+id/tv_update_userphoneno"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                />

            <TextView

                android:layout_width="100dip"
                android:layout_height="wrap_content"

                android:text="收货人姓名" />

            <EditText
                android:background="@drawable/edittext_backgroud"
                android:id="@+id/et_update_receiptmanname"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="所在地区"
                android:layout_width="100dip"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_update_areais"
                android:layout_width="400dip"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_update_addressselect"
                android:text="请选择>>"
                android:layout_width="100dip"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="详细地址"
                android:layout_width="100dip"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_updete_address"
                android:layout_width="500dip"
                android:background="@drawable/edittext_backgroud"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/qianhui" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/bt_update_saveaddress"
            android:background="@color/zxing_viewfinder_laser"
            android:layout_width="200dip"
            android:layout_height="60dip"
            android:text="确认修改"
            />

    </LinearLayout>

</LinearLayout>

